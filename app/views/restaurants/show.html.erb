<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>


<h1>
  <%= @restaurant.name %>
  <small>
    <%= link_to edit_restaurant_path(@restaurant) do %><i class="fa-regular fa-pen-to-square"></i><% end %>
    <%= link_to restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </small>
</h1>

<hr>
<h3><%= @restaurant.address %></h3>
<h3><%= @restaurant.category %></h3>

<%= link_to "new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

<%= link_to "home", restaurants_path, class: "btn btn-primary"%>
<%= link_to "edit", edit_restaurant_path, class: "btn btn-primary"%>

<br><br><br>

<%= link_to "Destroy", restaurant_path(@restaurant), class: "btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>

<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
  <p>
    <strong>Content:</strong>
    <%= review.content %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= review.rating %>
  </p>
<% end %>
